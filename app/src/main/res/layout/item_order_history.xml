<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF"
    android:layout_marginBottom="8dp">

    <TextView
        android:id="@+id/order_id_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đơn hàng #123"
        android:textStyle="bold"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/order_date_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ngày: 15/07/2025"
        android:textSize="14sp"
        android:paddingTop="4dp" />

    <TextView
        android:id="@+id/order_total_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tổng: 50.00đ"
        android:textSize="14sp"
        android:paddingTop="4dp" />

    <TextView
        android:id="@+id/order_status_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Trạng thái: Đã đặt"
        android:textSize="14sp"
        android:paddingTop="4dp" />

</LinearLayout>